Function dvojkove(desitkove As Integer) As String
Dim zbytek, podil As Integer

dvojkove = ""
podil = desitkove


Do While podil > 0
    zbytek = podil Mod 2
    If zbytek = 0 Then
        dvojkove = "0" + dvojkove
    Else
        dvojkove = "1" + dvojkove
    End If
    podil = podil \ 2
Loop

End Function

Function desitkove(str As String) As Variant

Dim delka, i As Integer
Dim znak As String

desitkove = 0
znaky = ""
delka = Len(str)
For i = 1 To delka
    znak = Mid(str, i, 1)
    desitkove = desitkove * 2 + Int(Val(znak))
Next

End Function

Sub volejznaky()
        MsgBox dvojkove("1010")
'    MsgBox desitkove("1010")
End Sub